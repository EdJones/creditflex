<div class="content1">
<div class="content_challenge_inner">
<h1>Listing challenges</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>User</th>
    <th>Credit</th>
    <th>Badge name</th>
    <th>Badge</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @challenges.each do |challenge| %>
  <tr>
    <td><%= challenge.name %></td>
    <td><%= challenge.description %></td>
    <td><%= challenge.user_id %></td>
    <td><%= challenge.credit %></td>
    <td><%= challenge.badge_name %></td>
    <td><%= challenge.badge_id %></td>
    <td><%= link_to 'Show', challenge %></td>
    <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
    <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Challenge', new_challenge_path %>

</div>
</div>