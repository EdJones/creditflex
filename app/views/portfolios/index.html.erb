<% @portfolios.each do |portfolio| %>
  <tr>
    <td><%= portfolio.student_id %></td>
    <td><%= portfolio.teacher_id %></td>
    <td><%= portfolio.notes %></td>
    <td><%= portfolio.status %></td>
    <td><%= link_to 'Show', portfolio %></td>
    <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
    <td><%= link_to 'Destroy', portfolio, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

