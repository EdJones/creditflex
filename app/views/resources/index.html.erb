<h1>Listing resources</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Category</th>
    <th>Url</th>
    <th>Description</th>
    <th>Viewed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.author_id %></td>
    <td><%= resource.category %></td>
    <td><%= resource.url %></td>
    <td><%= resource.description %></td>
    <td><%= resource.viewed %></td>
    <td><%= link_to 'Show', resource %></td>
    <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td><%= link_to 'Destroy', resource, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

