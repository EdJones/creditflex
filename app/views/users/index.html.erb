<h1>Listing users</h1>

<table>
  <tr>
    <th>Avatar</th>
    <th>username</th>
    <th>email</th>
    <th>created_at</th>
  </tr>

<% @users.each do |user| %>
  <tr>
  	<td><%= image_tag user.avatar.url.to_s, {:height => 30} %></td>
	<td><%= user.username %></td>
	<td><%= user.email %></td>
	<td><%= user.created_at %></td>
	<td><%= user.updated_at %></td>
	<td><%= user.activation_state %></td>
	<td><%= user.last_login_at %></td>
	<td><%= user.last_activity_at %></td>

	
	
	
	
	
	
	<td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

