<h1>Listing requests</h1>

<table>
  <tr>
    <th>User</th>
    <th>Goals</th>
    <th>Portfolio</th>
    <th>Help needed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= request.user_id %></td>
    <td><%= request.goals %></td>
    <td><%= request.portfolio_id %></td>
    <td><%= request.help_needed %></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

