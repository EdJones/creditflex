<div id="content-wishes2" class="wrapper">
<div id="column-1">
<div id="wish-list">
<div class="stream_header">
<h2>What would you master?</h2>
...for credit in school?
<div class="new-wish">
<%= render 'form1' %>


</div>
</div>
<div class="stream">


<% @wishes.each do |wish| %>
  <div class="stream-item">
  <div class="left-user">
  <%= image_tag(wish.user.avatar.url, :class => 'avatar-small') if wish.user.avatar? %>&nbsp;
  </div>
  <div class="wish">
    <div class="wish-header"><span class="wisher">
    <%= wish.user.username if wish.user %>
	</span></div>
	<div class="wish-body">
	<%= wish.wish %> 

	<div class="wish-admin">
	User: <%= wish.user_id %>
    <%= link_to 'Show', wish %>
    <%= link_to 'Edit', edit_wish_path(wish) %>
    <%= link_to 'Destroy', wish, method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>
	</div>
	<div class="wish-footer"><%=  (link_to 'View Challenge', show_challenge_wish_path(wish), remote: true ) if wish.try(:challenge_id) %>&nbsp;&nbsp;&nbsp; Echo
	</div>
	</div></div>
<% end %>

</div>


<div class="stream_footer">
<%= link_to 'New Wish', new_wish_path %>
</div>
</div>
</div>


</div>



</div>



<div id="lower-left">

<div id="projects">
 <div class="clearfix" id="projects_bar">
<div class="t_band">
<%= image_tag("presentation.png", :class => "penguin") %>
 <h3>Who's Used Credit Flex?</h3></div>
<% @projects[0..3].each do |project| %>
<div id="projects_item">
	<div class="item_desc">
		
		<b><%= raw(truncate(project.title, :length => 140, :separator => ' ')) %> </b>
		<%= image_tag( project.projekt.url.to_s, :class => "projekt") if project.projekt? %>
		<p><b>I'm:</b>&nbsp;<%= raw(truncate(project.summary, :length => 200, :separator => ' ')) %> <%= link_to("more", project) %></p>
	</div>
</div>
<% end %>
<%= link_to(image_tag("right_arrow.png", :class => "right_arrow"), projects_path, ) %>
</div>
<br /><%=link_to("Tell us about your CF project", new_project_path, :id => "add_project", :class => "add_button") %>
</div>


</div>




